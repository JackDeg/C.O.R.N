<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef ParentName="DrugPillBase">
    <defName>HappyPill</defName>
    <label>Happy Pill</label>
    <description>An highly compressed corn.</description>
    <graphicData>
      <texPath>Things/Item/Drug/Penoxycyline</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <MarketValue>10</MarketValue>
      <Mass>0.1</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
      <joy>0.50</joy>
      <drugCategory>Medical</drugCategory>
      <foodType>Processed, Fluid</foodType>
      <baseIngestTicks>90</baseIngestTicks>
      <ingestSound>Ingest_Inject</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Biff {0}</ingestCommandString>
      <ingestReportString>Biffing {0}.</ingestReportString>
      <useEatingSpeedStat>false</useEatingSpeedStat>
      <chairSearchRadius>100</chairSearchRadius>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>HappyPillHigh</hediffDef>
          <severity>1</severity>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>5</offset>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>HappyPill</chemical>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>20</listOrder>
        <overdoseSeverityOffset>
          <min>0.0</min>
          <max>0.1</max>
        </overdoseSeverityOffset>
        <largeOverdoseChance>0.001</largeOverdoseChance>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>HappyPillHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>Bare happy pills</label>
    <labelNoun>Bare happy pills</labelNoun>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.9</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>10.0</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <ChemicalDef>
    <defName>HappyPill</defName>
    <label>Happy Pill</label>
  </ChemicalDef>

  <ThoughtDef>
    <defName>HappyPillHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>HappyPillHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Happy on Pill</label>
        <description>I'm fuckin on corn me.</description>
        <baseMoodEffect>50</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
