<Defs>
	<RecipeDef ParentName="SurgeryFlesh">
        <defName>TreatInfection</defName>
		<label>treat infection</label>
		<removesHediff>WoundInfection</removesHediff>
		<addsHediff>TreatedInfection</addsHediff>
		<description>Use antibiotics to treat an infected wound.</description>
		<jobString>Treating {0}'s infection.</jobString>
		<successfullyRemovedHediffMessage>{0} has successfully treated {1}'s infection.</successfullyRemovedHediffMessage>
		<surgerySuccessChanceFactor>2</surgerySuccessChanceFactor>
		<recipeUsers>
			<li>Human</li>
		</recipeUsers>
		<workerClass>CORN.Recipe_AddHediff</workerClass>
		<workAmount>3000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Maizicillin</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Maizicillin</li>
			</thingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Medicine>15</Medicine>
		</skillRequirements>
	</RecipeDef>

	<HediffDef>
		<defName>TreatedInfection</defName>
		<label>treatedinfection</label>
		<labelNoun>treatedinfection</labelNoun>
		<description>Infection has been treated.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
		<isBad>false</isBad>
		<initialSeverity>0.001</initialSeverity>
		<comps>
			<li Class="CORN.HediffCompProperties_Dependent">
				<dependsOnHediff>WoundInfection</dependsOnHediff>
			</li>
		</comps>
		<stages>
			<li>
				<becomeVisible>false</becomeVisible>
			</li>
		</stages>
	</HediffDef>
</Defs>