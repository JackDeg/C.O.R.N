<Defs>
  <RecipeDef>
    <defName>MakeCornPill</defName>
    <label>synthesise happy pill</label>
    <description>Use advanced succ and blow procedures to turn into a phsycoactive drug!</description>
    <jobString>Succing on Angiosperms.</jobString>
    <workAmount>450</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <HappyPill>1</HappyPill>
      <CornCob>2</CornCob>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeCornPaste</defName>
    <label>macerate cobs</label>
    <description>Using various pestle and mortar techniques, you can create a corn cob paste!</description>
    <jobString>macerating cobs.</jobString>
    <workAmount>1000</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CornCob</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
    </ingredients>
    <products>
      <CornCobPaste>18</CornCobPaste>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeCornCompound</defName>
    <label>combine cobs</label>
    <description>Using highly advanced pestle and mortar techniques, you can create a steel-cob compound!</description>
    <jobString>combining cobs.</jobString>
    <workAmount>1000</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>T2CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CornCobPaste</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <CornCompound>10</CornCompound>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>StripCorn</defName>
    <label>strip corn</label>
    <description>Strip the cob of its corn. In the sexy way.</description>
    <jobString>stripping.</jobString>
    <workAmount>40</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <CornCob>1</CornCob>
    </products>
    <recipeUsers>
      <li>ButcherSpot</li>
      <li>TableButcher</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
