<Defs>
  <!--Corn Pill Recipies-->
  <RecipeDef>
    <defName>MakeCCornPill</defName>
    <label>synthesise crude happy pill</label>
    <description>Use primitive fermenting techniques to produce a mood enhancing drug from corn</description>
    <jobString>synthesising corny drugs.</jobString>
    <workAmount>450</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>CornRefining</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <CrudeHappyPill>1</CrudeHappyPill>
      <CornCob>5</CornCob>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeBCornPill</defName>
    <label>synthesise basic happy pill</label>
    <description>Use chemicals to purify this primitive drug.</description>
    <jobString>Purifying crude pills.</jobString>
    <workAmount>500</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>Tier2CornRefining</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CrudeHappyPill</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <BasicHappyPill>1</BasicHappyPill>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeACornPill</defName>
    <label>synthesise advanced happy pill</label>
    <description>Using the glitterworld mechanites from Luciferium you can remove the harmful toxins from your basic happy pills.</description>
    <jobString>Purifying basic pills.</jobString>
    <workAmount>700</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>Tier3CornRefining</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>BasicHappyPill</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Luciferium</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <AdvHappyPill>2</AdvHappyPill>
    </products>
  </RecipeDef>
  <!--Other recipies-->
  <RecipeDef>
    <defName>MakeCornPaste</defName>
    <label>macerate cobs</label>
    <description>Using various pestle and mortar techniques, you can create a corn cob paste</description>
    <jobString>macerating cobs.</jobString>
    <workAmount>1000</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CornCob</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
    </ingredients>
    <products>
      <CornCobPaste>18</CornCobPaste>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>MakeCornCompound</defName>
    <label>combine cobs</label>
    <description>Using highly advanced pestle and mortar techniques, you can create a steel-cob compound</description>
    <jobString>combining cobs.</jobString>
    <workAmount>1000</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>T2CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CornCobPaste</li>
          </thingDefs>
        </filter>
        <count>6</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <CornCompound>10</CornCompound>
    </products>
  </RecipeDef>

  <RecipeDef>
    <defName>StripCorn</defName>
    <label>strip corn</label>
    <description>Strip the cob of its corn. In the spicy way.</description>
    <jobString>stripping.</jobString>
    <workAmount>40</workAmount>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <researchPrerequisite>CobCompression</researchPrerequisite>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <CornCob>1</CornCob>
    </products>
    <recipeUsers>
      <li>ButcherSpot</li>
      <li>TableButcher</li>
    </recipeUsers>
  </RecipeDef>
</Defs>
